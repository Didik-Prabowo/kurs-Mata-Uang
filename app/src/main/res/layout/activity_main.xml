<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.devjavu.kursapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aplikasi Kurs Mata Uang"

        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e_dollar"
        android:hint="Nilai doller"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e_rupiah"
        android:hint="Nilai Rupiah"
        android:layout_below="@+id/e_dollar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/e_dollar"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dollar Ke Rupiah"
        android:id="@+id/button"
        android:layout_below="@+id/e_rupiah"
        android:layout_alignParentStart="true"
        android:onClick="btnKonversiClick"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUPIAH KE DOLLAR"
        android:id="@+id/rupdollar"
        android:layout_below="@+id/e_rupiah"
        android:layout_alignEnd="@+id/e_rupiah"
        android:layout_toEndOf="@+id/button"
        android:onClick="btnRupDollar"
        android:layout_marginTop="15dp"/>

</RelativeLayout>
